<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="Smoke Test SauceDemo" parallel="tests">
    <listeners>
        <listener class-name="tests.TestListener"/>
    </listeners>
    <test name="Thread#1">
        <classes>
            <class name="tests.LocatorsTest"/>
            <class name="tests.LoginTest">
                <methods>
                    <include name="checkPositiveLogin"/>
                </methods>
            </class>
        </classes>
    </test> <!-- Test -->
    <test name="Thread#2">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="tests.CartTest"/>
        </classes>
    </test> <!-- Test -->
</suite>
